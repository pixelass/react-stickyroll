{
	"name": "stickyroll",
	"version": "1.0.0",
	"private": true,
	"repository": "git@github.com:stickyroll/react-stickyroll.git",
	"license": "MIT",
	"author": "Gregor Adams <greg@pixelass.com>",
	"workspaces": [
		"components/*",
		"packages/*",
		"src/*"
	],
	"scripts": {
		"prebuild": "imhotep clean; yarn rollup",
		"build": "cross-env NODE_ENV=production imhotep build",
		"check-updates": "npx npm-check-updates -a; yarn lerna exec \"npx npm-check-updates -a\"",
		"clean": "lerna run clean",
		"clear:cache": "rimraf \"**/.rpt2_cache\"",
		"clear:docs": "rimraf docs",
		"clear:modules": "rimraf node_modules",
		"clear:yarn": "rimraf yarn.lock yarn-error.log",
		"dev": "yarn rollup && concurrently \"yarn rollup:watch\" \"imhotep dev --hot\"",
		"docs": "yarn clear:docs && typedoc --out docs src packages components --name Stickyroll --readme README.md --mode file --target ES5 --excludeExternals && touch docs/.nojekyll",
		"format": "lerna run format",
		"format:js": "prettier *.config.js .*rc.js *.js 'karma.*.js' --parser babylon --write",
		"format:json": "prettier .*rc --parser json --write",
		"format:md": "prettier '*.md' 'doc/**/*.md' --parser markdown --write",
		"format:root": "yarn format:md; yarn format:js; yarn format:ts; yarn format:json",
		"format:ts": "prettier '{app,test}/**/*.{ts,tsx}' --parser typescript --write",
		"karma": "cross-env HEADLESS=false karma start karma.js",
		"karma:headless": "karma start karma.js",
		"karma:remote": "karma start karma.js --remote --chrome --safari --firefox",
		"karma:remote:edge": "yarn karma:remote --edge",
		"lint": "lerna run lint",
		"ocd": "npx sort-package-json; lerna exec npx sort-package-json",
		"refresh": "yarn clear:cache; yarn clean; lerna clean --yes",
		"reinstall": "yarn clear:yarn && yarn clear:modules && yarn",
		"prerelease": "yarn rollup",
		"release": "lerna publish --conventional-commits --force-publish=*",
		"release:alpha": "yarn run prerelease && lerna publish --canary",
		"release:beta": "yarn run prerelease && lerna publish --canary --preid beta",
		"release:rc": "yarn run prerelease && lerna publish --canary --preid rc",
		"reset": "yarn refresh && yarn reinstall",
		"rollup": "lerna run build",
		"rollup:watch": "lerna run watch --parallel",
		"serve:docs": "serve docs",
		"serve:public": "serve public",
		"pretest": "yarn rollup && lerna run test",
		"test": "yarn karma:headless --local --chrome",
		"posttest": "lerna run lint",
		"toc": "npx markdown-toc README.md -i"
	},
	"dependencies": {
		"@types/react": "^16.7.13",
		"@types/react-dom": "16.0.11",
		"@types/styled-components": "^4.1.3",
		"lottie-web": "^5.4.2",
		"react": "^16.6.3",
		"react-dom": "^16.6.3",
		"styled-components": "^4.1.2",
		"tslib": "^1.9.3"
	},
	"devDependencies": {
		"@babel/core": "^7.2.0",
		"@popmotion/easing": "^1.0.1",
		"@types/jasmine": "^3.3.1",
		"babel-loader": "8.0.4",
		"babel-plugin-styled-components": "1.9.2",
		"commitlint": "^7.2.1",
		"concurrently": "^4.1.0",
		"copy-webpack-plugin": "^4.6.0",
		"cross-env": "5.2.0",
		"dotenv": "6.1.0",
		"enzyme": "3.7.0",
		"enzyme-adapter-react-16": "1.7.0",
		"globby": "8.0.1",
		"husky": "^1.2.0",
		"imhotep": "^1.1.3",
		"jasmine-core": "^3.3.0",
		"karma": "3.1.3",
		"karma-browserstack-launcher": "1.3.0",
		"karma-chrome-launcher": "2.2.0",
		"karma-firefox-launcher": "1.1.0",
		"karma-ie-launcher": "1.0.0",
		"karma-jasmine": "2.0.1",
		"karma-safari-launcher": "1.0.0",
		"karma-viewport": "1.0.2",
		"karma-webpack": "4.0.0-rc.5",
		"lerna": "^3.5.1",
		"meow": "5.0.0",
		"os": "0.1.1",
		"prettier": "^1.15.3",
		"puppeteer": "1.11.0",
		"rimraf": "^2.6.2",
		"serve": "^10.1.1",
		"stylelint-config-styled-components": "0.1.1",
		"stylelint-processor-styled-components": "1.5.1",
		"typedoc": "^0.13.0",
		"typescript": "3.2.1",
		"webpack": "4.27.0",
		"webpack-dev-server": "^3.1.10",
		"yarn-upgrade-all": "^0.5.0"
	},
	"engines": {
		"node": ">=8",
		"npm": ">=6"
	},
	"browserslist": [
		"last 2 Chrome versions",
		"last 2 Firefox versions",
		"last 2 Safari versions",
		"last 2 ios versions",
		"last 2 opera versions",
		"last 2 Edge versions"
	],
	"renovate": {
		"major": false
	}
}
