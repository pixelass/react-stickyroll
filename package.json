{
  "name": "stickyroll",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:stickyroll/react-stickyroll.git",
  "license": "MIT",
  "author": "Gregor Adams <greg@pixelass.com>",
  "workspaces": [
    "components/*",
    "guide/*",
    "packages/*",
    "src/*"
  ],
  "scripts": {
    "prebuild": "imhotep clean; yarn rollup",
    "build": "cross-env NODE_ENV=production imhotep build",
    "clean:lerna": "lerna run clean",
    "clear:cache": "rimraf '**/.rpt2_cache'",
    "clear:coverage": "rimraf coverage coverage.lcov",
    "clear:docs": "rimraf docs",
    "clear:log": "rimraf '**/*.log' '*.log'",
    "clear:modules": "rimraf node_modules",
    "clear:typedoc": "rimraf docs/typedoc",
    "clear:yarn": "rimraf yarn.lock yarn-error.log",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov -t $CODECOV_TOKEN",
    "dev": "yarn rollup && concurrently 'yarn rollup:watch' 'imhotep dev --hot'",
    "docs": "yarn clear:typedoc && typedoc --out docs/typedoc src packages components  --exclude '**/node_modules/**/*' --name Stickyroll --readme README.md --mode file --target ES5 --excludeExternals && touch docs/.nojekyll",
    "document": "yarn patternplate:github && yarn docs",
    "format": "lerna run format",
    "format:js": "prettier '*.config.js' '.*rc.js' '*.js' 'karma.*.js' --parser babel --write",
    "format:json": "prettier '.*rc' '!.yarnrc' --parser json --write",
    "format:md": "prettier '*.md' 'doc/**/*.md' --parser markdown --write",
    "format:root": "yarn format:md; yarn format:js; yarn format:ts; yarn format:json",
    "format:ts": "prettier '{app,test}/**/*.{ts,tsx}' --parser typescript --write",
    "karma": "cross-env HEADLESS=false karma start karma.js",
    "karma:headless": "karma start karma.js",
    "karma:remote": "karma start karma.js --remote --chrome --safari --firefox",
    "karma:remote:edge": "yarn karma:remote --edge",
    "lint": "lerna run lint",
    "ncu": "npx npm-check-updates -u; yarn lerna exec 'npx npm-check-updates -u'",
    "ocd": "npx sort-package-json; lerna exec npx sort-package-json",
    "patternplate:build": "yarn clear:docs && patternplate build --out='docs' --base='/'",
    "patternplate:dev": "yarn rollup && concurrently 'yarn rollup:watch' 'yarn lerna run demo:watch' 'patternplate start'",
    "patternplate:github": "cross-env NODE_ENV=production yarn rollup && yarn clear:docs && patternplate build --out='docs' --base='/react-stickyroll/'",
    "refresh": "yarn clear:cache; yarn clean:lerna",
    "reinstall": "yarn clear:yarn && lerna clean --yes && yarn clear:modules && yarn",
    "prerelease": "yarn rollup",
    "prepublish": "yarn rollup",
    "release": "lerna publish --conventional-commits",
    "reset": "yarn refresh && yarn reinstall",
    "rollup": "lerna run build",
    "rollup:watch": "lerna run watch --parallel",
    "serve:docs": "serve docs",
    "serve:public": "serve public",
    "pretest": "yarn clear:coverage && yarn rollup && lerna run test --parallel",
    "test": "yarn karma:headless --local --chrome",
    "posttest": "lerna run lint --parallel; bundlesize",
    "toc": "npx markdown-toc README.md -i"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 ios versions",
    "last 2 opera versions",
    "last 2 Edge versions"
  ],
  "dependencies": {
    "@popmotion/easing": "1.0.2",
    "@stickyroll/decorators": "1.2.0",
    "@stickyroll/hooks": "1.2.0",
    "@stickyroll/inner": "1.2.0",
    "@stickyroll/pagers": "1.2.0",
    "@stickyroll/stickyroll": "1.2.0",
    "@stickyroll/themes": "1.2.0",
    "@stickyroll/utils": "1.2.0",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "@types/styled-components": "5.0.1",
    "lottie-web": "5.6.6",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "styled-components": "5.0.1"
  },
  "devDependencies": {
    "@asspixel/karma-browserstack-launcher": "1.5.1",
    "@babel/core": "7.8.7",
    "@babel/register": "7.8.6",
    "@patternplate/cli": "3.2.6",
    "@patternplate/widgets": "3.2.5",
    "@stickyroll/testing-utils": "1.2.0",
    "@types/jasmine": "3.5.9",
    "ava": "3.5.0",
    "babel-loader": "8.0.6",
    "babel-plugin-istanbul": "6.0.0",
    "babel-plugin-styled-components": "1.10.7",
    "bundlesize": "^0.18.0",
    "codecov": "3.6.5",
    "commitlint": "8.3.5",
    "concurrently": "^5.1.0",
    "copy-webpack-plugin": "5.1.1",
    "cross-env": "7.0.2",
    "dotenv": "8.2.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "execa": "4.0.0",
    "globby": "11.0.0",
    "husky": "4.2.3",
    "imhotep": "1.1.7",
    "jasmine-core": "3.5.0",
    "karma": "4.4.1",
    "karma-chrome-launcher": "3.1.0",
    "karma-firefox-launcher": "1.3.0",
    "karma-ie-launcher": "1.0.0",
    "karma-jasmine": "3.1.1",
    "karma-safari-launcher": "1.0.0",
    "karma-viewport": "1.0.5",
    "karma-webpack": "4.0.2",
    "lerna": "3.20.2",
    "meow": "6.0.1",
    "npm-check-updates": "4.0.4",
    "nyc": "15.0.0",
    "os": "0.1.1",
    "prettier": "1.19.1",
    "puppeteer": "2.1.1",
    "rimraf": "3.0.2",
    "serve": "11.3.2",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "ts-node": "8.6.2",
    "typedoc": "0.16.11",
    "typescript": "3.8.3",
    "webpack": "4.42.0",
    "webpack-dev-server": "3.10.3"
  },
  "engines": {
    "node": ">=10.18.0",
    "npm": ">=6"
  },
  "renovate": {
    "major": false
  },
  "bundlesize": [
    {
      "path": "./packages/hooks/dist/index.js",
      "maxSize": "1 kB"
    }
  ]
}
